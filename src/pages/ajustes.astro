	const propertyLists = document.querySelectorAll('#propertyLists article')
	const viewMoreButton = document.querySelector('#viewMoreButton')
	// Hide the last two articles
	propertyLists.forEach((article, index) => {
		if (index > 2) {
			article.classList.add('hidden')
		}
	})

	// If I click the view more button, show the hidden articles
	viewMoreButton.addEventListener('click', () => {
		propertyLists.forEach((article, index) => {
			article.classList.remove('hidden')
		})
		viewMoreButton.classList.add('hidden')
	})
</script>