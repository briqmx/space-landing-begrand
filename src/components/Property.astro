---
import { Icon } from 'astro-icon/components'
const { project } = Astro.props;

// To calculate the total earnings in 10 years, we multiply the project.price by the project.appreciation and divide it by 100 to get the percentage. Then we multiply it by 10 to get the total earnings in 10 years.
const appreciation = project.appreciation / 100;
const price_appretiation = project.price * Math.pow(1 + appreciation, 10);
const rent_appretiation = (project.rentPerMeter * 12) * Math.pow(1 + 0.05, 10);

const totalEarnings = (price_appretiation - project.price) + rent_appretiation;

const numberToCurrency = (number) => {
  return new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(number);
}
---

<article class="w-full flex items-stretch border border-black/10 divide-x divide-black/10 bg-white flex-col md:flex-row">
  <figure class="aspect-square relative overflow-hidden h-[300px] flex-shrink-0 w-full md:w-auto">
    {project.isFeatured && <span class="absolute top-0 left-0 bg-primary text-white font-medium text-sm px-2 py-1 z-10 m-2">Destacado</span>}
    <img src={project.image} alt={project.title} class="object-cover absolute inset-0 w-full h-full" />
  </figure>
  <div class="flex flex-col items-start w-full">
    <div class="p-4 flex flex-col gap-1">
      <div class="flex items-center gap-1">
        <h2 class="font-display text-2xl font-bold">{project.title}</h2>
        <Icon name="tabler:discount-check-filled" class="mt-1 h-4 w-4 text-primary" />
      </div>
      <div class="flex items-center gap-1 text-base">
        <Icon name="tabler:map-pin" class="opacity-50" />
        <p>{project.location}</p>
      </div>
    </div>
    <div class="flex items-center gap-2 w-full p-4 border-y">
      <Icon name="tabler:star" class="text-primary" />
      <p class="text-base line-clamp-2">{project.description}</p>
    </div>
    <div class="flex justify-between p-4 w-full flex-col md:flex-row gap-2 items-end">
      <div class="flex flex-col text-base md:text-lg gap-3">
        <p class="flex items-center gap-2">
          <Icon name="tabler:currency-dollar" class="text-navy" />
          <span>Costo por m²: <strong class="inline">{numberToCurrency(project.price)}</strong></span>
        </p>
        <p class="flex items-center gap-2">
          <Icon name="tabler:trending-up" class="text-navy" />
          <span><strong class="inline">{ project.appreciation }% </strong>de plusvalia estimada al año*</span>
        </p>
        <p class="flex items-center gap-2">
          <Icon name="tabler:home-move" class="text-navy" />
          <span>Ganancia estimada a 10 años de <strong class="inline">{numberToCurrency(totalEarnings)}</strong>*</span>
        </p>
      </div>
      <a target="_blank" href={project.url} class="button button--action w-full md:w-auto">Conoce más</a>
    </div>
  </div>
</article>