---
import { Icon } from 'astro-icon/components'
const { project } = Astro.props

const currency = (number) => {
	return new Intl.NumberFormat('es-MX', {
		style: 'currency',
		currency: 'MXN'
	})
		.format(number)
		.replace(/\D00$/, '')
}

const formatNumber = (number) => {
	return new Intl.NumberFormat('es-MX').format(number)
}
---

{
	project.isFeatured ? (
		<article class="flex flex w-full flex-col gap-4 rounded-xl bg-navy p-4 text-white md:col-span-3 md:flex-row">
			<figure class="relative aspect-square h-64 overflow-hidden rounded-lg">
				<img
					src={project.image}
					alt={project.title}
					class="absolute inset-0 h-full w-full object-cover"
				/>
			</figure>
			<div class="flex w-full flex-col items-start justify-between gap-4">
				<div class="flex flex-col items-start gap-1">
					<span class="text-primary">Destacado</span>
					<div class="flex items-start gap-1">
						<h3 class="font-display text-3xl font-bold">{project.title}</h3>
						<Icon name="tabler:discount-check-filled" class="mt-1 h-5 w-5 text-primary" />
					</div>
					<p class="text-sm">{project.location}</p>
				</div>
				<div>
					<p class="text-sm leading-relaxed opacity-60">{project.description}</p>
				</div>
				<div class="flex w-full items-center justify-between gap-4">
					<div class="flex flex-col">
						<p class="font-display text-2xl font-bold">
							{currency(project.price)}
							<small class="font-medium opacity-50">/m2</small>
						</p>
						<p class="text-sm opacity-50">
							{formatNumber(project.unitsAvailable)}
							de
							{formatNumber(project.unitsTotal)} m2
						</p>
					</div>
					<a
						class="inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2  font-medium shadow-sm"
						href={project.url}
					>
						Ver detalles
					</a>
				</div>
			</div>
		</article>
	) : (
		<article class="flex w-full flex-col gap-2 rounded-xl border bg-white p-4 shadow-sm">
			<figure class="relative aspect-video overflow-hidden rounded-lg">
				<div class="absolute top-0 z-10 flex w-full items-center justify-end gap-2 p-1">
					{project.isNew ? (
						<span class="rounded-md border border-black/10 bg-white p-1 text-xs font-medium">
							Nuevo
						</span>
					) : null}
					{project.status == 'active' ? (
						<span class="rounded-md border border-black/10 bg-white p-1 text-xs font-medium">
							Operando
						</span>
					) : null}
				</div>
				<img
					src={project.image}
					alt={project.title}
					class="absolute inset-0 h-full w-full object-cover"
				/>
			</figure>
			<div class="mb-4">
				<div class="flex items-start gap-1">
					<h3 class="font-display text-lg font-bold">{project.title}</h3>
					<Icon name="tabler:discount-check-filled" class="mt-1 h-4 w-4 text-primary" />
				</div>
				<p class="flex items-center gap-1 text-sm text-zinc-500">
					<Icon name="tabler:map-pin" class="text-primary" />
					{project.location}
				</p>
			</div>
			<div class="flex items-center justify-between">
				<div class="flex flex-col">
					<p class="font-display font-bold">
						{currency(project.price)}
						<small class="font-medium text-zinc-500">/m2</small>
					</p>
					<p class="text-sm text-zinc-500">
						{formatNumber(project.unitsAvailable)}
						de
						{formatNumber(project.unitsTotal)} m2
					</p>
				</div>
				<a
					class="inline-flex items-center justify-center rounded-lg border bg-white px-4 py-2 text-sm font-medium shadow-sm"
					href={project.url}
				>
					Ver detalles
				</a>
			</div>
		</article>
	)
}
